if has("syntax")
    syntax on
endif

if has("autocmd")
    filetype plugin indent on
    autocmd BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif

if filereadable("cscope.out")
    cs add cscope.out
endif

set number
set showcmd
set nowrap
set magic
set hidden
set nocompatible

set autoindent
set cindent

set incsearch
set hlsearch

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set wildmenu
set wildmode=full

set guifont=Consolas:h14

let Tlist_Exit_OnlyWindow=1

set fileencodings=ucs-bom,utf-8,gb2312,gb18030,big5,latin1

nnoremap <F2> :Tlist<CR>
nnoremap <F3> :%s/\s\+$//e<CR>

" For pathogen
execute pathogen#infect()
